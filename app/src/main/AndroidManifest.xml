<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.arthanfinance">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        android:windowSoftInputMode="adjustResize">
        <activity android:name=".applyLoan.CustomerCameraActivity"></activity>
        <activity android:name=".introductionPager.IntroductionPagerActivity" />
        <activity android:name=".applyLoan.InitiateApplyLoanActivity" />
        <activity android:name=".applyLoan.LoanApplicationSubmittedActivity" />
        <activity android:name=".applyLoan.ApplyForLoanActivity" />
        <activity android:name=".homeTabs.HomeDashboardActivity" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ChooseLanguageActivity" />
        <activity android:name=".FaceLoginActivity" />
        <activity android:name=".FingerPrintLoginActivity" />
        <activity android:name=".MPINLoginActivity" />
        <activity android:name=".OTPActivity" />
        <activity android:name=".RegistrationActivity" />
        <activity android:name=".SetNewMpinActivity" />
        <activity android:name=".SetupFaceBiometricActivity" />
        <activity android:name=".SetupFingerBiometricActivity" />
        <activity
            android:name=".applyLoan.UploadKycDetailsActivity"
            android:theme="@style/Theme.Design.NoActionBar" />
    </application>

</manifest>